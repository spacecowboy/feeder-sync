{
  "name": "feeder-sync",
  "description": "Feeder sync server that runs on Cloudflare Workers using Durable Objects",
  "version": "1.0.0",
  "module": "./src/main.mjs",
  "private": true,
  "files": [
    "dist"
  ],
  "main": "dist/main",
  "types": "dist/main.d.ts",
  "scripts": {
    "format": "prettier --write  '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "lint": "eslint --max-warnings=0 src && prettier --check '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "mjs": "tsc -d && mv dist/main.js dist/main.mjs",
    "cjs": "tsc -m commonjs",
    "build": "npm run mjs && npm run cjs"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "typescript",
      "prettier"
    ]
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-typescript": "^3.0.0",
    "prettier": "^2.5.0",
    "typescript": "^4.3.2"
  }
}
